<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="336.0" prefWidth="300.0" spacing="10" style="-fx-padding: 20;" stylesheets="@../.Styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controllers.scenes_controllers">
    <Label focusTraversable="true" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Buscar Profesor, ingrese DNI" />

    <TextField fx:id="dniField" promptText="Ingrese el DNI del profesor" styleClass="text-field" />

    <Button fx:id="btnBuscar" onAction="#searchTeacher" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Buscar Profesor" />

    <Label fx:id="statusLabel" style="-fx-text-fill: red;" />

    <Button fx:id="btnVolver" onAction="#switchToTeachersMenu" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Volver" />
</VBox>
